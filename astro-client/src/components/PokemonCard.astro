---
import PokemonSprites from "./PokemonSprites.astro";

const { pokemon } = Astro.props;
---

<style>
  @import url('https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;700&display=swap');

  :root {
    --ctp-base: #24273a;
    --ctp-surface0: #363a4f;
    --ctp-surface1: #494d64;
    --ctp-text: #cad3f5;
    --ctp-subtext: #a5adcb;
    --ctp-blue: #8aadf4;
    --ctp-lavender: #b7bdf8;
    --ctp-yellow: #eed49f;
  }

  .card {
    background: var(--ctp-surface0);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--ctp-surface1);
    box-shadow: 0 6px 14px rgba(0,0,0,0.4);
    font-family: 'Noto Sans', sans-serif;
    max-width: 450px;
    margin: 2rem auto;
    color: var(--ctp-text);
    transition: transform .25s ease, box-shadow .25s ease;
  }

  .card:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 22px rgba(0,0,0,0.5);
  }

  .header {
    text-align: center;
    margin-bottom: 1rem;
  }

  .name {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0;
    color: var(--ctp-lavender);
    letter-spacing: 1px;
  }

  .dex-no {
    font-size: .9rem;
    color: var(--ctp-subtext);
    margin-top: .3rem;
  }

  .sprite-container {
    display: flex;
    justify-content: center;
    margin: 1.5rem 0;
  }

  .sprite-container img {
    width: 140px;
    height: 140px;
    object-fit: contain;
    background: var(--ctp-base);
    border-radius: 12px;
    padding: .5rem;
    border: 1px solid var(--ctp-surface1);
  }

  .types {
    display: flex;
    justify-content: center;
    gap: .4rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .type-badge {
    padding: .25rem .75rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: .85rem;
    text-transform: capitalize;
    background: var(--ctp-blue);
    color: #1a1b26;
  }

  .description {
    text-align: center;
    max-width: 45ch;
    margin: 1rem auto;
    line-height: 1.6;
    color: var(--ctp-text);
  }

  .abilities {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .ability-badge-collapsible {
    position: relative;
    background: var(--ctp-lavender);
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .ability-badge-collapsible:hover {
    transform: scale(1.02);
    box-shadow: 0 4px 10px rgba(0,0,0,0.3);
  }

  .ability-badge-collapsible input {
    display: none; /* hide the checkbox */
  }

  .ability-badge-collapsible label {
    display: block;
    padding: 0.5rem 0.8rem;
    font-weight: 600;
    color: #1a1b26;
  }

  .ability-badge-collapsible .ability-description {
    max-height: 0;
    overflow: hidden;
    padding: 0 0.8rem;
    background: var(--ctp-surface1);
    color: var(--ctp-text);
    font-size: 0.85rem;
    line-height: 1.4;
    transition: max-height 0.25s ease, padding 0.25s ease;
  }

  .ability-badge-collapsible input:checked ~ .ability-description {
    max-height: 200px; /* enough for most descriptions */
    padding: 0.5rem 0.8rem;
  }


  h3 {
    color: var(--ctp-yellow);
    margin-top: 1.5rem;
    margin-bottom: .4rem;
    font-size: 1.1rem;
  }

  ul {
    list-style: none;
    padding: 0;
    margin-left: 0;
  }

  li {
    background: var(--ctp-surface0);
    border: 1px solid var(--ctp-surface1);
    border-radius: 10px;
    padding: .6rem .8rem;
    margin-bottom: .6rem;
    transition: border-color .2s ease;
  }

  li:hover {
    border-color: var(--ctp-blue);
  }
</style>

<div class="card">
  <div class="header">
    <h2 class="name">{pokemon.name}</h2>
    <div class="dex-no">#{pokemon.id}</div>
  </div>

  <div class="row">
    {pokemon.sprites.official.default && <img src={pokemon.sprites.official.default} alt="official"/>}
  </div>

  <div class="types">
    {pokemon.types.map(type => (
      <span class="type-badge">{type}</span>
    ))}
  </div>

  <p class="description">{pokemon.description}</p>

  <h3>Abilities</h3>
  <div class="abilities">
    {pokemon.abilities.map((ability, index) => (
      <div class="ability-badge-collapsible">
        <input type="checkbox" id={`ability-${index}`} />
        <label for={`ability-${index}`}>{ability.name}</label>
        <div class="ability-description">{ability.description}</div>
      </div>
    ))}
  </div>

  <div class="sprite-container">
    <PokemonSprites sprites={pokemon.sprites} />
  </div>
</div>
